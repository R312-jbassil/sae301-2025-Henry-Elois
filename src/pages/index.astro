---
import Layout from "../layouts/Layout.astro";

const pb = Astro.locals.pb;
pb.authStore.loadFromCookie(Astro.request.headers.get("cookie") || "");

import LunetteSVG from "../components/Svglunettes.astro";

let totalCreateurs = 0;
try {
  const result = await pb.collection("nbr_creation_par_user").getFullList();
  totalCreateurs = result.length;
} catch (error) {
  totalCreateurs = 0;
}
---

<Layout title="TaVue - Configurateur de lunettes" pb={pb}>
  <section class="py-16 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
    <div class="space-y-6">
      <div
        class="inline-flex items-center gap-2 text-sm text-gray-600 bg-base-200 px-4 py-2 rounded-full"
      >
        Fabrication française
      </div>
      <h1 class="text-5xl lg:text-6xl font-bold leading-tight">
        Vos lunettes,<br />
        <span class="text-gray-400">à votre image</span>
      </h1>
      <p class="text-lg text-gray-600 leading-relaxed">
        Créez des lunettes uniques qui vous ressemblent.<br />
        Design épuré, matériaux premium, savoir-faire français.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="/personnalisation" class="btn btn-primary btn-lg"
          >Personnaliser mes lunettes</a
        >
        <a
          href="/generateur-ia"
          class="btn btn-outline btn-lg border-black text-black hover:bg-black hover:text-white"
        >
          Tester le générateur IA
        </a>
      </div>
    </div>
    <div class="relative">
      <div class="relative rounded-3xl overflow-hidden shadow-2xl">
        <img
          src="/photo_hero.jpg"
          alt="Femme portant des lunettes de soleil rondes"
          class="w-full h-auto object-cover"
        />
      </div>
    </div>
    <div
      class="absolute top-145 right-170 bg-base-200 rounded-3xl shadow-2xl p-6 max-w-sm"
    >
      <h3 class="font-bold text-lg mb-1">Offre de bienvenue</h3>
      <p class="text-gray-600 text-sm">
        -15% sur votre première paire personnalisée
      </p>
    </div>
  </section>

  <section class="py-16 bg-base-200 -mx-5 px-5">
    <div class="max-w-screen-2xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold mb-4">
          TaVue, Opticien et créateur de lunettes de qualité
        </h2>
        <p class="text-lg text-gray-600">
          Découvrez nos modèles phares et personnalisez les à votre goût !
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="card bg-white shadow-lg hover:shadow-xl transition-shadow">
          <figure
            class="px-10 pt-10 bg-white h-40 flex items-center justify-center"
          >
            <LunetteSVG couleur="#000" classe="w-28 h-28" />
          </figure>
          <div class="card-body items-center text-center">
            <h3 class="card-title text-lg font-bold">
              Lunettes de ville noire
            </h3>
            <p class="text-sm text-gray-600">À partir de 120€</p>
            <p class="text-xs text-gray-500">
              12 clients sont satisfaits de cette paire
            </p>
            <div class="card-actions mt-4">
              <a href="/personnalisation" class="btn btn-primary btn-sm"
                >Personnaliser</a
              >
            </div>
          </div>
        </div>
        <div class="card bg-white shadow-lg hover:shadow-xl transition-shadow">
          <figure
            class="px-10 pt-10 bg-white h-40 flex items-center justify-center"
          >
            <LunetteSVG couleur="#8B4513" classe="w-28 h-28" />
          </figure>
          <div class="card-body items-center text-center">
            <h3 class="card-title text-lg font-bold">
              Lunettes de ville marron
            </h3>
            <p class="text-sm text-gray-600">À partir de 120€</p>
            <p class="text-xs text-gray-500">
              8 clients sont satisfaits de cette paire
            </p>
            <div class="card-actions mt-4">
              <a href="/personnalisation" class="btn btn-primary btn-sm"
                >Personnaliser</a
              >
            </div>
          </div>
        </div>

        <div class="card bg-white shadow-lg hover:shadow-xl transition-shadow">
          <figure
            class="px-10 pt-10 bg-white h-40 flex items-center justify-center"
          >
            <LunetteSVG couleur="#2E8B57" classe="w-28 h-28" />
          </figure>
          <div class="card-body items-center text-center">
            <h3 class="card-title text-lg font-bold">
              Lunettes de ville verte
            </h3>
            <p class="text-sm text-gray-600">À partir de 120€</p>
            <p class="text-xs text-gray-500">
              6 clients sont satisfaits de cette paire
            </p>
            <div class="card-actions mt-4">
              <a href="/personnalisation" class="btn btn-primary btn-sm"
                >Personnaliser</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 px-5 max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <p class="text-sm text-gray-600 mb-2">EXPÉRIENCE UNIQUE</p>
      <h2 class="text-4xl font-bold">Un configurateur intuitif</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
      <div
        class="rounded-lg p-6 md:p-10 h-96 md:h-[32rem] flex items-center justify-center"
      >
        <img
          src="/front-view-modern-black-sunglasses-pink-dark.jpg"
          alt="Aperçu du configurateur de lunettes"
          class="w-full h-full object-contain"
        />
      </div>
      <div class="space-y-6">
        {
          [
            {
              num: 1,
              titre: "Choisissez votre style",
              desc: "Sélectionnez la forme, moderne, rétro ou vintage",
            },
            {
              num: 2,
              titre: "Sélectionnez votre couleur",
              desc: "Plusieurs coloris disponibles uniformément",
            },
            {
              num: 3,
              titre: "Choisissez la taille de vos verres",
              desc: "Différentes tailles disponibles à votre convenance",
            },
            {
              num: 4,
              titre: "Définissez le style des branches",
              desc: "Classique, courbe ou flexible",
            },
          ].map((item) => (
            <div class="flex items-start gap-4">
              <div class="w-8 h-8 bg-black text-white rounded-full flex items-center justify-center flex-shrink-0 font-bold">
                {item.num}
              </div>
              <div>
                <h3 class="font-bold text-lg mb-1">{item.titre}</h3>
                <p class="text-gray-600">{item.desc}</p>
              </div>
            </div>
          ))
        }
        <a href="/personnalisation" class="btn btn-primary"
          >Commencer maintenant →</a
        >
      </div>
    </div>
  </section>

  <section class="py-16 bg-base-200 -mx-5 px-5">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold mb-2">Nos avis</h2>
      <p class="text-lg mb-8 text-gray-600">
        {
          totalCreateurs > 0
            ? `${totalCreateurs} personnes ont déjà créé leurs lunettes sur TaVue !`
            : "Soyez le premier à créer vos lunettes sur TaVue !"
        }
      </p>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {
          Array.from({ length: 4 }).map(() => (
            <div class="bg-white p-6 rounded-lg shadow">
              <div class="flex gap-1 mb-3 justify-center">
                {Array.from({ length: 5 }).map(() => (
                  <span class="text-yellow-400">★</span>
                ))}
              </div>
              <p class="text-sm text-gray-600">
                Une paire solide et personnalisable à mon image, j'adore.
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 text-center px-5">
    <h2 class="text-4xl font-bold mb-4">Prêt à créer vos lunettes ?</h2>
    <p class="text-lg mb-8 text-gray-600">
      Rejoignez des milliers de clients satisfaits qui ont choisi TaVue
    </p>
    <a href="/personnalisation" class="btn btn-primary btn-lg"
      >Accéder au configurateur →</a
    >
  </section>
</Layout>
