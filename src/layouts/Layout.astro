---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;

const user = Astro.locals.user;
const isAuthenticated = !!user;
---

<!doctype html>
<html lang="fr" data-theme="tavue">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body class="bg-white">
    <header class="bg-base-200 px-5 py-4">
      <nav class="flex items-center justify-between max-w-screen-2xl mx-auto">
        <div class="flex items-center gap-8">
          <a href="/" class="flex items-center gap-2">
            <img src="/logo.jpg" alt="TaVue logo" class="object-cover h-10" />
          </a>
          <div class="hidden md:flex gap-6">
            <a href="/personnalisation" class="text-black hover:underline">
              Personnalisation
            </a>
            {
              isAuthenticated && (
                <>
                  <a href="/galerie" class="text-black hover:underline">
                    Ma galerie de création
                  </a>
                  <a href="/generateur" class="text-black hover:underline">
                    Générer avec une IA
                  </a>
                </>
              )
            }
          </div>
        </div>
        <div class="flex items-center gap-4">
          {
            isAuthenticated ? (
              <>
                <span class="text-sm hidden md:block">
                  Bonjour, {user.name || user.email}
                </span>
                <form method="post" action="/api2/logout">
                  <button type="submit" class="btn btn-primary px-6">
                    Déconnexion
                  </button>
                </form>
              </>
            ) : (
              <>
                <a href="/login" class="btn btn-outline">
                  Se connecter
                </a>
                <a href="/signup" class="btn btn-primary">
                  S'inscrire
                </a>
              </>
            )
          }
        </div>
      </nav>
    </header>

    <main class="px-5 py-8 max-w-screen-2xl mx-auto min-h-screen">
      <slot />
    </main>

    <footer class="bg-black text-white px-5 py-12">
      <div class="max-w-screen-2xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
          <div>
            <h3 class="font-bold mb-4">Accueil</h3>
            <ul class="space-y-2 text-sm">
              <li>
                <a href="/personnalisation" class="hover:underline">
                  Personnalisation
                </a>
              </li>
              <li><a href="/apropos" class="hover:underline">À propos</a></li>
              <li>
                <a href="/mon-panier" class="hover:underline">Mon panier</a>
              </li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold mb-4">Contact</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/faq" class="hover:underline">FAQ</a></li>
              <li><a href="/contact" class="hover:underline">Contact</a></li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold mb-4">Mentions légales</h3>
            <ul class="space-y-2 text-sm">
              <li>
                <a href="/politique-confidentialite" class="hover:underline">
                  Politique de confidentialité
                </a>
              </li>
              <li>
                <a href="/mentions-legales" class="hover:underline">
                  Mentions légales
                </a>
              </li>
              <li>
                <a href="/conditions-generales" class="hover:underline">
                  Conditions générales de ventes
                </a>
              </li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold mb-4">Paiements acceptés</h3>
            <div class="flex gap-2 flex-wrap">
              <div
                class="bg-white text-black px-3 py-1 rounded text-xs font-bold"
              >
                MC
              </div>
              <div
                class="bg-white text-black px-3 py-1 rounded text-xs font-bold"
              >
                CB
              </div>
              <div
                class="bg-white text-black px-3 py-1 rounded text-xs font-bold"
              >
                PayPal
              </div>
              <div
                class="bg-white text-black px-3 py-1 rounded text-xs font-bold"
              >
                Revolut
              </div>
              <div
                class="bg-white text-black px-3 py-1 rounded text-xs font-bold"
              >
                Apple Pay
              </div>
            </div>
          </div>
        </div>

        <div class="border-t border-gray-800 pt-8">
          <h3 class="font-bold mb-4">Restons connectés, suivez nous sur :</h3>
          <div class="flex gap-4">
            <a href="#" class="hover:opacity-80" aria-label="Instagram">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073z"
                ></path>
                <path
                  d="M12 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                ></path>
              </svg>
            </a>
            <a href="#" class="hover:opacity-80" aria-label="Facebook">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                ></path>
              </svg>
            </a>
            <a href="#" class="hover:opacity-80" aria-label="TikTok">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"
                ></path>
              </svg>
            </a>
            <a href="#" class="hover:opacity-80" aria-label="Twitter">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                ></path>
              </svg>
            </a>
          </div>
        </div>

        <div class="mt-8 pt-8 border-t border-gray-800">
          <p class="text-sm text-gray-400">S'inscrire à notre Newsletter</p>
          <div class="mt-4 flex gap-2 max-w-md">
            <input
              type="email"
              placeholder="Votre email..."
              class="input input-bordered flex-1 bg-white text-black"
            />
            <button class="btn btn-primary">S'inscrire</button>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
